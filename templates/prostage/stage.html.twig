            </tr>
            <tr>
                <th>Description</th>
                <td>{{ stage.description }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{stage.mail }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{stage.entreprise.nom}}</td>
            </tr>
                <tr>
                <th>Liste formations</th>
